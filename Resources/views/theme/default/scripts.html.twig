<script type="text/javascript">
    var recognize_filemanager_defaults_{{ id }} = { debug: true, api: { url: "/admin/fileapi", startingDirectory: "", useLocalStorage: false } }
    var recognize_filemanager_config_{{ id }} = (true, recognize_filemanager_defaults_{{ id }}, {{ filemanager_config|json_encode|raw }} );

    var filetree = $('#{{ id }}.filetree').filemanager( recognize_filemanager_config_{{ id }} );

    $.data( filetree, "filemanager").on("filemanager:api:error", function( response ){
        alert( response.message );
    });

</script>